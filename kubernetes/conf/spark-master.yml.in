kind: ReplicationController
apiVersion: v1
metadata:
  name: spark-master-controller
spec:
  replicas: 1
  selector:
    component: spark-master
  template:
    metadata:
      labels:
        component: spark-master
    spec:
      containers:
        - name: spark-master
          image: gcr.io/google_containers/spark:1.5.2_v1
          command: ["/start-master"]
          ports:
            - containerPort: 7077
            - containerPort: 8080
          volumeMounts:
            - mountPath: /seldon-models
              name: data-volume
      volumes:
        - name: data-volume
          hostPath:
            path: $(DATA_PATH)
---
kind: Service
apiVersion: v1
metadata:
  name: spark-master
spec:
  ports:
    - port: 7077
      targetPort: 7077
  selector:
    component: spark-master
---
kind: Service
apiVersion: v1
metadata:
  name: spark-webui
spec:
  ports:
    - port: 8080
      targetPort: 8080
  selector:
    component: spark-master
