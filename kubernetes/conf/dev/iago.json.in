{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "iago",
        "labels": {
	    "service": "seldon"
        }
    },
    "spec": {
        "volumes": [
            {
                "name": "data-volume",
                "hostPath": {"path": "/seldon-data"}
            }
        ],
        "containers": [
            {
                "name": "iago",
                "image": "seldonio/iago:%SELDON_IAGO_IMAGE_VERSION%",
                "command": [
                    "sleep",
                    "infinity"
                ],
                "volumeMounts": [
                    {
                        "name": "data-volume",
                        "mountPath": "/seldon-data"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ],
	"terminationGracePeriodSeconds": 0
    }
}
