{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "iago"
    },
    "spec": {
        "volumes": [
            {
                "name": "data-volume",
                "hostPath": {"path": "/seldon-data"}
            }
        ],
        "containers": [
            {
                "name": "iago",
                "image": "seldonio/iago:0.1",
                "command": [
                    "sleep",
                    "infinity"
                ],
                "volumeMounts": [
                    {
                        "name": "data-volume",
                        "mountPath": "/seldon-data"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ],
	"terminationGracePeriodSeconds": 0
    }
}
