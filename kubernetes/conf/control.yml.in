apiVersion: v1
kind: Pod
metadata:
  name: seldon-control
spec:
  containers:
  - image: seldonio/seldon-control:1.1
    name: seldon-shell
    command: [ "sleep", "infinity" ]
    volumeMounts:
    - mountPath: /home/seldon/conf
      name: conf-volume
    - mountPath: /seldon-models
      name: models-volume
  volumes:
    - name: conf-volume
      hostPath:
        path: $(CONF_PATH)
    - name: models-volume
      hostPath:
        path: $(MODELS_PATH)
