{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "seldon-control"
    },
    "spec": {
        "volumes": [
            {
                "name": "data-volume",
		${DATA_VOLUME}
            }
        ],
        "containers": [
            {
                "name": "seldon-shell",
                "image": "seldonio/seldon-control:1.2.3_v2",
                "command": [
                    "sleep",
                    "infinity"
                ],
                "volumeMounts": [
                    {
                        "name": "data-volume",
                        "mountPath": "/seldon-data"
                    }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent"
            }
        ]
    }
}
