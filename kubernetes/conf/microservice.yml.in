apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: $(NAME)
spec:
  replicas: 1
  template:
    metadata:
      name: $(NAME)
      labels:
        name: $(NAME)
    spec:
      containers:
        - name: $(NAME)
          image: $(IMAGE):$(VERSION)
          ports:
            - containerPort: 5000
              protocol: TCP
---
apiVersion: v1
kind: Service
metadata:
  name: $(NAME)
  labels:
    name: $(NAME)
    type: microservice
spec:
  type: ClusterIP
  ports:
    - port: 5000
      targetPort: 5000
      protocol: TCP
  selector:
    name: $(NAME)
