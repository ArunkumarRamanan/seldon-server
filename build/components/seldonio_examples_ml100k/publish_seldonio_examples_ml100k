#!/bin/bash

set -o nounset
set -o errexit
set -o pipefail

STARTUP_DIR="$( cd "$( dirname "$0" )" && pwd )"

ts() {
    date +"%Y%m%d_%H%M%S"
}

log() {
    echo "$(ts) $1"
}

#From Env
#${SELDON_SERVER_HOME}

log "Publishing seldonio_examples_ml100k"

source ${SELDON_SERVER_HOME}/build/build_versions_generated

IMAGE_NAME=seldonio/examples-ml100k
IMAGE_VERSION=${SELDON_EXAMPLES_ML100K_IMAGE_VERSION}

BUILT_IMAGE=$(docker images|grep "${IMAGE_NAME}" | grep ${IMAGE_VERSION}|awk '{printf "%s:%s",$1,$2}')

log "attempting to publish [${BUILT_IMAGE}]"

docker login -u seldonio
docker push ${IMAGE_NAME}:${IMAGE_VERSION}

log "published [${BUILT_IMAGE}]"

